#!/bin/bash

# argumente --> ordner mit encoding, ordner fÃ¼r ergebnisse
#shopt -s extglob

DIR_ENC=$1
DIR_OUT=$2

mkdir $DIR_OUT

for file in `ls $DIR_ENC`; do
    if [[ $file =~ ^[0-9]{3,4}.*\.asp$ ]];
    then 
        # only test instances starting with 3-4 numbers are of interest
        cat ./$DIR_ENC$file ./incmode.lp ./${DIR_ENC}encoding.asp > ./$DIR_OUT$file
        echo "created file: ./$DIR_OUT$file"
    fi
done


